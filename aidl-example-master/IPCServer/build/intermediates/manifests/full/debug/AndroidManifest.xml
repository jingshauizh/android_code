<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aa.ipcsystem"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.aa.ipcsystem.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.example.aa.ipcsystem.MessengerService"
            android:enabled="true"
            android:exported="true"
            android:process=":remote" />
        <service
            android:name="com.example.aa.ipcsystem.AIDL.BookManagerService"
            android:enabled="true"
            android:exported="true"
            android:process=":remote" />

        <activity
            android:name="com.example.aa.ipcsystem.AIDL.BookManagerActivity"
            android:label="@string/title_activity_book_manager"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>