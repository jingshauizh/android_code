<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include layout="@layout/headlayout" android:id="@+id/includeTitle"/>
    <include layout="@layout/bottom_layout" android:id="@+id/includeBottom"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layMainbody"
        android:layout_below="@+id/includeTitle"
        android:layout_above="@+id/includeBottom"
        >
    </LinearLayout>
</RelativeLayout>
