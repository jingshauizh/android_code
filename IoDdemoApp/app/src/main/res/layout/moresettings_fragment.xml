<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreSettingsActivity"
    android:orientation="vertical"
    android:background="#000000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Podcast"
                android:id="@+id/switch_podcast"
                android:textSize="20sp"
                android:paddingTop="25dp"
                android:textColor="#ffffff"
                android:checked="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c8c8c8"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp">

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Server"
                    android:id="@+id/textview_server"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/edittext_server"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="20sp"
                    android:hint="192.168.0.10:80"
                    android:textColor="#ffffff"
                    android:textColorHint="#646464"
                    android:singleLine="true" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c8c8c8"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Min freeze interval (ms)"
                    android:id="@+id/textView6"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/edittext_min_freeze_interval"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="20sp"
                    android:digits="0123456789"
                    android:hint="20000"
                    android:textColor="#ffffff" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c8c8c8"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max freeze interval (ms)"
                    android:id="@+id/textview_freeze_interval"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/edittext_max_freeze_interval"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="20sp"
                    android:digits="0123456789"
                    android:hint="20000"
                    android:textColor="#ffffff" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c8c8c8"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Min freeze time (ms)"
                    android:id="@+id/textView7"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/edittext_min_freeze_time"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="20sp"
                    android:digits="0123456789"
                    android:hint="1000"
                    android:textColor="#ffffff" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c8c8c8"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max freeze time (ms)"
                    android:id="@+id/textView2"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/edittext_max_freeze_time"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="20sp"
                    android:digits="0123456789"
                    android:hint="5000"
                    android:textColor="#ffffff" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c8c8c8"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable remote content"
                    android:id="@+id/switch_remote_content"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c8c8c8"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Content server"
                    android:id="@+id/textView8"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:id="@+id/edittext_content_server"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:hint="http://192.168.0.8:80/movie"
                    android:textColor="#ffffff"
                    android:textColorHint="#646464"
                    android:singleLine="true" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c8c8c8"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device Name"
                    android:id="@+id/textView9"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:id="@+id/edittext_devicename"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:hint="http://192.168.0.8:80/movie"
                    android:textColor="#ffffff"
                    android:textColorHint="#646464"
                    android:singleLine="true" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c8c8c8"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>

